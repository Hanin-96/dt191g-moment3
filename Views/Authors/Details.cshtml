@model Moment3.Models.Author

@{
    ViewData["Title"] = "Detaljer";
}

<h1>Detaljer</h1>

<div>
    <h4>Detaljer om författare</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AuthName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AuthName)
        </dd>
    </dl>
    <h4>Böcker</h4>
    <ul>
        @if (Model.Books != null)
        {
            //Skriv ut alla titlar på böcker under samma författare
            @foreach (var book in Model.Books)
            {
                <li>@book.Title</li>
            }
        }
    </ul>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Ändra</a> |
    <a asp-action="Index">Tillbaka till listan</a>
</div>
