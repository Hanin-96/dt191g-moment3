@model IEnumerable<Moment3.Models.Book>

@{
    ViewData["Title"] = "Böcker";
}

<h1>Boksamling</h1>

<p>
    <a asp-action="Create">Lägg till ny bok</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <!--
            <th>
            @Html.DisplayNameFor(model => model.Description)
            </th>
            -->
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <!--
                <td>
                @Html.DisplayFor(modelItem => item.Description)
                </td>
                    -->
                <td>
                    @Html.DisplayFor(modelItem => item.Author.AuthName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Ändra</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detaljer</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Radera</a>
                </td>
            </tr>
        }
    </tbody>
</table>
